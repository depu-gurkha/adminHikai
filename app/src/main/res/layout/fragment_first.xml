<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step 1/1"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First, let's find out what type of course you're making."
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RadioGroup
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg_course_type"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rb_theory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theory"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selector"
            android:textColor="@drawable/text_color"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:textSize="20dp"
            android:padding="16dp"
            android:drawableTop="@drawable/ic_theory"
            />

        <RadioButton
            android:id="@+id/rb_practical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Practical"
            android:button="@android:color/transparent"
            android:background="@drawable/radio_selector"
            android:textColor="@drawable/text_color"
            android:elevation="4dp"
            android:layout_margin="16dp"
            android:textSize="20dp"
            android:padding="16dp"
            android:drawableTop="@drawable/ic_practical"/>
    </RadioGroup>



</FrameLayout>